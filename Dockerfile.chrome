# Chrome with Chinese fonts support
FROM chromedp/headless-shell:latest

# 安装字体依赖、中文字体和 Emoji 字体
RUN apt-get update && apt-get install -y \
    fonts-liberation \
    fonts-noto-cjk \
    fonts-noto-cjk-extra \
    fonts-noto-color-emoji \
    fonts-wqy-zenhei \
    fonts-wqy-microhei \
    fontconfig \
    && fc-cache -f -v \
    && rm -rf /var/lib/apt/lists/*

# 默认命令已在基础镜像中定义

